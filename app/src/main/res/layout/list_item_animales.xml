<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/tarjeta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/diez"
        app:cardCornerRadius="@dimen/diez"
        app:cardBackgroundColor="?cardBackgroundColor"
        app:cardElevation="@dimen/diez">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/diez"
            android:orientation="horizontal">

            <ImageView android:id="@+id/imagenMascota"
                    android:layout_width="@dimen/cientocuarenta"
                    android:layout_height="@dimen/cientocuarenta"
            />
            <View android:layout_width="@dimen/uno"
                android:layout_marginLeft="@dimen/diez"
                android:layout_height="fill_parent"
                android:background="@color/black" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/veinte"
                android:orientation="vertical">



                <TextView
                    android:id="@+id/nombreMascota"
                    android:textSize="@dimen/veinte"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/especieMascota"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/edadMascota"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/razaMascota"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/sexoMascota"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

        </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>