<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/fondo_gradiente"
    tools:context="com.example.Pet_Tracker.Login">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Registrarse"
        android:layout_marginTop="@dimen/margen_top_registrarse"
        android:textSize="@dimen/tamaño_registrarse"
        android:layout_gravity="center"
    />

    <EditText android:id="@+id/etNombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/margen_top_registrarse"
        android:hint="Nombre"
    />

    <EditText android:id="@+id/etCorreo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:inputType="textEmailAddress"
        android:layout_marginTop="@dimen/margen_top_registrarse"
        android:hint="Correo"
    />

    <EditText android:id="@+id/etContra"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:inputType="textPassword"
        android:layout_marginTop="@dimen/margen_top_registrarse"
        android:hint="Contraseña"
    />

    <Button android:id="@+id/registrarse"
        android:layout_marginTop="@dimen/margen_top_registrarse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Registrarse"
    />

    <TextView
        android:layout_marginTop="@dimen/margen_top_registrarse"
        android:textSize="15sp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="O si ya tienes cuenta"
    />

    <Button android:id="@+id/iniciarSesion"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Iniciar Sesión"
    />

</LinearLayout>